# Cluster Guardian Configuration
# All variables are prefixed with CLUSTER_GUARDIAN_

# =============================================================================
# LLM Configuration (REQUIRED)
# =============================================================================

# LLM provider: openai, anthropic, azure_openai, ollama, litellm
CLUSTER_GUARDIAN_LLM_PROVIDER=openai

# Model name (e.g., gpt-4o, claude-sonnet-4-20250514, llama3.2)
CLUSTER_GUARDIAN_LLM_MODEL=gpt-4o

# API key for the LLM provider
CLUSTER_GUARDIAN_LLM_API_KEY=your-api-key-here

# Base URL (required for litellm/ollama, optional for openai)
# CLUSTER_GUARDIAN_LLM_BASE_URL=http://litellm.llm.svc.cluster.local:4000/v1

# =============================================================================
# Server
# =============================================================================

CLUSTER_GUARDIAN_HOST=0.0.0.0
CLUSTER_GUARDIAN_PORT=8900
# CLUSTER_GUARDIAN_DEBUG=false

# =============================================================================
# Kubernetes
# =============================================================================

# Path to kubeconfig (omit for in-cluster config)
# CLUSTER_GUARDIAN_KUBECONFIG_PATH=/path/to/kubeconfig

# =============================================================================
# Optional: Service URLs (auto-discovered if not set)
# =============================================================================

# CLUSTER_GUARDIAN_PROMETHEUS_URL=http://prometheus:9090
# CLUSTER_GUARDIAN_LOKI_URL=http://loki:3100
# CLUSTER_GUARDIAN_ALERTMANAGER_URL=http://alertmanager:9093
# CLUSTER_GUARDIAN_REDIS_URL=redis://redis:6379
# CLUSTER_GUARDIAN_QDRANT_URL=http://qdrant:6333
# CLUSTER_GUARDIAN_LONGHORN_URL=http://longhorn-frontend:8000
# CLUSTER_GUARDIAN_GATUS_URL=http://gatus:80
# CLUSTER_GUARDIAN_CROWDSEC_LAPI_URL=http://crowdsec-lapi:8080
# CLUSTER_GUARDIAN_CROWDSEC_API_KEY=your-crowdsec-bouncer-key

# =============================================================================
# Optional: K8sGPT
# =============================================================================

# CLUSTER_GUARDIAN_K8SGPT_URL=http://k8sgpt:8080
# CLUSTER_GUARDIAN_K8SGPT_ENABLED=true

# =============================================================================
# Safety Controls
# =============================================================================

CLUSTER_GUARDIAN_MAX_ACTIONS_PER_HOUR=60
CLUSTER_GUARDIAN_AUTONOMY_LEVEL=conditional
# CLUSTER_GUARDIAN_DRY_RUN_MODE=false

# =============================================================================
# Notifications (all optional)
# =============================================================================

# CLUSTER_GUARDIAN_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# CLUSTER_GUARDIAN_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
# CLUSTER_GUARDIAN_TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...
# CLUSTER_GUARDIAN_PAGERDUTY_INTEGRATION_KEY=your-key

# =============================================================================
# GitHub Integration (optional)
# =============================================================================

# CLUSTER_GUARDIAN_GITHUB_TOKEN=ghp_...
# CLUSTER_GUARDIAN_GITHUB_OWNER=your-org
# CLUSTER_GUARDIAN_GITHUB_REPO=your-repo

# =============================================================================
# Observability (optional)
# =============================================================================

# CLUSTER_GUARDIAN_LANGFUSE_PUBLIC_KEY=pk-...
# CLUSTER_GUARDIAN_LANGFUSE_SECRET_KEY=sk-...
# CLUSTER_GUARDIAN_LANGFUSE_HOST=https://langfuse.your-domain.com

# =============================================================================
# Health Checks
# =============================================================================

# Domain for service health checks (e.g., your-domain.com)
# CLUSTER_GUARDIAN_HEALTH_CHECK_DOMAIN=your-domain.com
